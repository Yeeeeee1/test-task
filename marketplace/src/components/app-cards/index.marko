class {
    onCreate() {
        this.state = { data: {} };
    }
    onInput(input) {
        const { data } = input;

        this.state.data = data;
    }
}

style {
    .cards {
        width: 100px;
    }
}

<div class="cards">
<for|stock| of=state.data.stock>
    <app-card stock=stock></app-card>
</for>
</div>